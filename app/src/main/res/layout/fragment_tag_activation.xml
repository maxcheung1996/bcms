<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".presentation.modules.TagActivationFragment">

    <!-- Top bar with back button -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        app:title="@string/tag_activation_title"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable content area -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_tag_activation"
                    android:contentDescription="@string/tag_activation_description"
                    app:tint="@color/primary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tag_activation_title"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tag_activation_instruction"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

            </LinearLayout>

            <!-- Scanning Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/scanningStatusCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Status Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:id="@+id/scanningStatusIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_circle_primary"
                            app:tint="@color/text_secondary" />

                        <TextView
                            android:id="@+id/scanningStatusText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/tag_activation_ready_message"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Error Message Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/errorMessageCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/error_light"
                app:strokeWidth="2dp"
                app:strokeColor="@color/error">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="start|center_vertical">

                    <!-- Red Dot Indicator -->
                    <ImageView
                        android:id="@+id/errorIndicatorDot"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_circle_primary"
                        app:tint="@color/error" />

                    <!-- Error Icon -->
                    <ImageView
                        android:id="@+id/errorIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_error"
                        app:tint="@color/error" />

                    <!-- Error Message Text -->
                    <TextView
                        android:id="@+id/errorMessageText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Error message will appear here"
                        android:textColor="@color/error"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Tag Selection Card (Manual Mode) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tagSelectionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface_primary"
                app:strokeWidth="1dp"
                app:strokeColor="@color/primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header with count -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Select Tag to Activate"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary" />

                        <TextView
                            android:id="@+id/tagSelectionCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 tags"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:background="@drawable/rounded_background"
                            android:backgroundTint="@color/surface_secondary"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            tools:text="3 tags" />

                    </LinearLayout>

                    <!-- Tags RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tagSelectionRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:itemCount="3"
                        tools:listitem="@layout/item_tag_activation_candidate_tag" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Scanned Tag Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/scannedTagCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/surface_secondary"
                app:strokeWidth="1dp"
                app:strokeColor="@color/primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Scanned Tag (Inactive)"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/scannedEpcText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="EPC: E2801100200046123456"
                        android:textColor="@color/text_primary"
                        android:fontFamily="monospace"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/scannedRssiText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Raw: D5E8 | dBm: -34"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="monospace"
                        android:textSize="12sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- BC Type Dropdown -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/bcTypeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="BC Type"
                app:helperText="Select component type"
                app:startIconDrawable="@drawable/ic_category"
                app:startIconTint="@color/primary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/bcTypeDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <!-- Activate Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/activateButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:text="@string/activate_tag_button"
                android:textSize="16sp"
                android:enabled="false"
                android:icon="@drawable/ic_check_circle"
                style="@style/Widget.MaterialComponents.Button" />

            <!-- Success Message -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/successMessageCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:visibility="gone"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/success_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_check_circle"
                        app:tint="@color/success" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/successMessageText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tag Activated Successfully!"
                            android:textColor="@color/success"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/activatedTagNumberText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Tag Number: 341800330404202105730000001"
                            android:textColor="@color/success"
                            android:fontFamily="monospace"
                            android:textSize="14sp"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
