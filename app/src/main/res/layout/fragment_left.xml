<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".fragments.LeftFragment">

    <!-- 標題區域 / Title Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📡 RFID 掃描控制 / RFID Scan Control"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="16dp"
        android:background="#E3F2FD"
        android:layout_marginBottom="16dp" />

    <!-- 控制按鈕區域 / Control Button Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/read_RFID"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:layout_margin="4dp"
            android:text="📡 開始掃描 / Start Scanning"
            android:textSize="14sp"
            android:background="#4CAF50"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/clear_Data"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="🗑️ 清除 / Clear"
            android:textSize="12sp"
            android:background="#FF9800"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/export"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="📁 匯出 / Export"
            android:textSize="12sp"
            android:background="#2196F3"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <!-- 功率控制區域 / Power Control Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:background="#F5F5F5"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔋 功率 / Power:"
            android:textSize="16sp"
            android:layout_gravity="center_vertical" />

        <EditText
            android:id="@+id/et_power"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="8dp"
            android:inputType="number"
            android:hint="5-33"
            android:textAlignment="center"
            android:background="#FFFFFF" />

        <Button
            android:id="@+id/btn_power"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="設定 / Set"
            android:textSize="14sp"
            android:background="#4fb794"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <!-- 統計資訊區域 / Statistics Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E8F5E8"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tagNumbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="標籤數量 / Tag Count: 0"
            android:textSize="16sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/readNumbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="讀取次數 / Read Count: 0"
            android:textSize="16sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/useTimes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用時 / Duration: 0s (0/s)"
            android:textSize="16sp"
            android:padding="4dp" />

    </LinearLayout>

    <!-- 掃描結果清單 / Scan Results List -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📋 掃描結果 / Scan Results (長按移除 / Long press to remove)"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <ListView
        android:id="@+id/scan_results"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:divider="#DDDDDD"
        android:dividerHeight="1dp" />

</LinearLayout>
