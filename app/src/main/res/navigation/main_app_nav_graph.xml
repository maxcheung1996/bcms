    </fragment>

    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.socam.bcms.presentation.notifications.NotificationFragment"
        android:label="Sync Notifications"
        tools:layout="@layout/fragment_notifications">
        
        <action
            android:id="@+id/action_notification_back"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/mainFragment" />
